<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile number or email address"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/email_phone_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_contact_mail_black_24dp"
            android:background="@android:drawable/editbox_background"
            android:drawablePadding="10dp"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="10"
            android:hint="6-10 characters"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:background="@android:drawable/editbox_background"
            android:drawablePadding="10dp"
            android:id="@+id/password_signin"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:onClick="logIn"
            android:textAlignment="gravity"
            android:background="#2d22ff"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgotten your password?"
            android:textSize="18dp"
            android:clickable="true"
            android:layout_marginTop="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="#cadedf">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Didn't have an account?"
                android:textSize="20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textSize="20dp"
                android:layout_marginTop="70sp"
                android:background="#e48c2f"
                android:textColor="#ffffff"
                android:onClick="signerType"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="250dp"
                android:textSize="20dp"
                android:clickable="true"/>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>